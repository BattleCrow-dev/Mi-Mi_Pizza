<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowBackground">@color/background_color</item>

        <item name="android:fontFamily">@font/marmelad</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowAnimation</item>
    </style>

    <style name="AppTheme.WindowAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out_anim</item>
    </style>

    <style name="AppGreenButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/green_button</item>
    </style>

    <style name="AppOrangeButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/orange_button</item>
    </style>

    <style name="BottomNavigation.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>